{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information" 
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EcoEnergyDatabase": "Server=localhost\\SQLEXPRESS;Database=EcoEnergyDB;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "ApiSettings": {
    "BaseUrl": "https://localhost:7272/api/", 
    "EnableSwaggerInProduction": false 
  },
  "DataInitialization": {
    "SeedFromCsv": true, 
    "CsvPaths": {
      "EnergyIndicators": "ModelData/indicadors_energetics_cat.csv",
      "WaterConsumptions": "ModelData/consum_aigua_cat_per_comarques.csv"
    },
    "RequiredTables": [ "EnergyIndicators", "WaterConsumptions" ]
  },
  "JwtSettings": { 
    "Key": "TuClaveSecretaSuperSegura",
    "Issuer": "EcoEnergyAPI",
    "Audience": "EcoEnergyApp",
    "ExpiryInMinutes": 60
  }
}