@page
@model T5.PR1.Practica_1.Pages.AddSimulationModel
@{
    ViewData["Title"] = "Afegir Simulació";
}

<h1>Afegir Nova Simulació</h1>

<form method="post" class="form">
    <div class="form-group">
        <label asp-for="Simulation.Type" class="control-label">Tipus de Sistema:</label>
        <select asp-for="Simulation.Type" class="form-control" asp-items="Model.TiposDeEnergia" required>
            <option value="">-- Selecciona un tipus --</option>
        </select>
        <span asp-validation-for="Simulation.Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Simulation.SunHours" class="control-label">Hores de Sol:</label>
        <input asp-for="Simulation.SunHours" class="form-control" type="number" min="0" max="24" required />
        <span asp-validation-for="Simulation.SunHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Simulation.WindSpeed" class="control-label">Velocitat del Vent (km/h):</label>
        <input asp-for="Simulation.WindSpeed" class="form-control" type="number" step="0.1" min="0" required />
        <span asp-validation-for="Simulation.WindSpeed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Simulation.WaterFlow" class="control-label">Cabal d'Aigua (m³/s):</label>
        <input asp-for="Simulation.WaterFlow" class="form-control" type="number" step="0.1" min="0" required />
        <span asp-validation-for="Simulation.WaterFlow" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Simular</button>
        <a asp-page="/ShowSimulations" class="btn btn-secondary">Cancel·lar</a>
    </div>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}