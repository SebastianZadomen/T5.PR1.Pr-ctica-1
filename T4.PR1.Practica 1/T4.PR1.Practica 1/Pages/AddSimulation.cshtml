@page
@model AddSimulationModel
@{
    ViewData["Title"] = "Añadir Simulación";
}

<h2 class="text-center">Añadir Nueva Simulación</h2>

<form method="post" class="form p-4">
    <div class="mb-3">
        <label for="TipoSistema" class="form-label">Tipo de Sistema:</label>
        <select asp-for="TipoSistema" asp-items="Model.TiposDeEnergia" class="form-select" required>
            <option value="">-- Selecciona una opción --</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="Parametro" class="form-label">Valor del Parámetro:</label>
        <input type="number" asp-for="Parametro" class="form-control" step="0.01" min="0.1" max="3.0" required />
    </div>

    <div class="mb-3">
        <label for="CostoPorKWh" class="form-label">Costo por kWh (€):</label>
        <input type="number" asp-for="CostoPorKWh" class="form-control" step="0.01" required />
    </div>

    <div class="mb-3">
        <label for="PrecioPorKWh" class="form-label">Precio por kWh (€):</label>
        <input type="number" asp-for="PrecioPorKWh" class="form-control" step="0.01" required />
    </div>

    <button type="submit" class="btn btn-primary w-100">Añadir Simulación</button>
</form>